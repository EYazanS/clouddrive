@page
@model ResetPasswordModel

@inject IHtmlLocalizer<SharedResource> Localizer

@{
	ViewData["Title"] = "Reset password";
}

<div class="grid grid-cols-1 md:grid-cols-2">
	<div class="aspect-w-4 aspect-h-3">
		<img src="~/img/char-forgot.jpeg" class="" alt="Forgot password" />
	</div>

	<div class="p-4">
		<img src="/img/logo2.svg" class="mx-auto h-48 w-auto" alt="Foras logo" />

		<h2 class="font-bold text-2xl my-4 text-center">
			@Localizer["Reset Password"]
		</h2>

		<div class="w-2/3 mx-auto">
			<form method="post">
				<div class="flex flex-col w-72 mx-auto space-y-4">
					<div asp-validation-summary="ModelOnly" class="text-danger mb-6"></div>

					<div class="form-group">
						<label asp-for="Input.Email"></label>
						<input asp-for="Input.Email" class="form-control bg-primary-200" />
						<span asp-validation-for="Input.Email" class="text-danger"></span>
					</div>

					<div class="form-group">
						<label asp-for="Input.Password"></label>
						<input asp-for="Input.Password" class="form-control bg-primary-200" />
						<span asp-validation-for="Input.Password" class="text-danger"></span>
					</div>

					<div class="form-group">
						<label asp-for="Input.ConfirmPassword"></label>
						<input asp-for="Input.ConfirmPassword" class="form-control bg-primary-200" />
						<span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
					</div>

					<button type="submit" class="btn btn-primary bg-primary-blue w-full mt-4">
						@Localizer["Reset Password"]
					</button>
				</div>
			</form>
		</div>
	</div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}

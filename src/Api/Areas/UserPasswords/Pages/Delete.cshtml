@page "/user-passwords/delete/{id?}"

@model CloudDrive.Api.Areas.UserPasswords.Pages.DeletePage

@{
	Layout = "/Views/Shared/_Layout.cshtml";
}

<form asp-area="UserPasswords" asp-page="/Delete" asp-route-id="Id" method="post">
	<div class="max-w-fit mx-auto bg-white shadow-lg rounded-2xl">
		<div class="px-6 py-4 space-y-5">
			<input asp-for="UserPassword.Id" type="hidden">
			<p class="font-bold text-xl mb-2">
				Are you sure you want to delete this user password?
			</p>
			<p class="text-gray-700 text-base"><strong>Site: </strong>@Model.UserPassword.Site</p>
			<p class="text-gray-700 text-base"><strong>Username: </strong>@Model.UserPassword.Username</p>
			<p class="text-gray-700 text-base"><strong>Password: </strong>@Model.UserPassword.Password</p>
			<p class="text-gray-700 text-base"><strong>Creation Date: </strong>@Model.UserPassword.CreateDate</p>
		</div>
		<div class="px-6 py-4 flex justify-between">
			<button type="submit" class="bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded-xl">
				Delete
			</button>
			<a asp-area="UserPasswords" asp-page="/Index"
				class="float-right bg-gray-400 hover:bg-gray-600 text-white font-bold py-2 px-4 rounded-xl">
				Cancel
			</a>
		</div>
	</div>
</form>